# GraphQL Server
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:4000/graphql

# AWS (for server-side operations)
AWS_REGION=us-east-1
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localhost:4566
TABLE_NAME=tamafriends-local

# JWT Secrets (server-side only - DO NOT COMMIT .env.local)
JWT_SECRET=your-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# Redis
REDIS_URL=redis://localhost:6379

# OpenTelemetry & Observability
# OTLP exporter endpoint for sending traces to SigNoz
# Leave empty or comment out to disable tracing export (traces still generated locally)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# Service name for identifying traces in SigNoz
OTEL_SERVICE_NAME=social-media-web

# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=debug
