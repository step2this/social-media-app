{
  "name": "@social-media-app/logger",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared logging infrastructure with Pino and OpenTelemetry",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "pino": "^10.1.0",
    "rotating-file-stream": "^3.2.7",
    "@opentelemetry/api": "^1.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "logging",
    "pino",
    "opentelemetry",
    "structured-logging",
    "distributed-tracing"
  ]
}
