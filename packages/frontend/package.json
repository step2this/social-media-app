{
  "name": "@social-media-app/frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend for social media app",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite --port 3000",
    "dev:force": "vite --port 3000 --force",
    "dev:clean": "rm -rf node_modules/.vite && vite --port 3000",
    "dev:aws": "rm -f .env.local && vite --port 3000",
    "dev:local": "cp .env.local.example .env.local 2>/dev/null || echo 'VITE_API_URL=http://localhost:3001\nVITE_ENABLE_MSW=true' > .env.local && vite --port 3000",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest run src",
    "test:integration": "vitest run --dir src/__tests__/integration",
    "test:auth": "vitest run --testNamePattern=\"auth|Auth|registration|Registration\"",
    "test:navigation": "vitest run --testNamePattern=\"navigation|redirect|Navigation|Redirect\"",
    "test:bug-fix": "vitest run --testNamePattern=\"registration.*redirect|handleAuthSuccess\"",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:debug": "vitest --inspect-brk --no-coverage --reporter=verbose",
    "lint": "eslint src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@social-media-app/shared": "workspace:*",
    "lodash-es": "^4.17.21",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.30.1",
    "zod": "^4.1.12",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/lodash-es": "^4.17.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^27.0.0",
    "msw": "^2.11.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}