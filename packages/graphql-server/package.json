{
  "name": "@social-media-app/graphql-server",
  "version": "1.0.0",
  "description": "GraphQL server with Apollo Server v4 and AWS Lambda integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:server": "tsc && node dist/standalone-server.js",
    "start": "node dist/standalone-server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/aws-lambda": "^3.1.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@social-media-app/auction-dal": "workspace:*",
    "@social-media-app/auth-utils": "workspace:*",
    "@social-media-app/aws-utils": "workspace:*",
    "@social-media-app/dal": "workspace:*",
    "@social-media-app/shared": "workspace:*",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "graphql": "^16.9.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tag": "^2.12.6",
    "graphql-validation-complexity": "^0.4.2",
    "jose": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@aws-sdk/client-kinesis": "^3.908.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@social-media-app/integration-tests": "workspace:*",
    "@types/aws-lambda": "^8.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/graphql-depth-limit": "^1.1.6",
    "@types/node": "^22.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
