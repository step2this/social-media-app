{
  "name": "@social-media-app/graphql-server",
  "version": "1.0.0",
  "description": "GraphQL server with Apollo Server v4 and AWS Lambda integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "pnpm --filter ...@social-media-app/graphql-server^... build",
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:server": "tsc && node dist/standalone-server.js",
    "start": "node dist/standalone-server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@apollo/server": "^5.0.2",
    "@as-integrations/aws-lambda": "^4.0.1",
    "@aws-sdk/client-dynamodb": "^3.911.0",
    "@aws-sdk/lib-dynamodb": "^3.911.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-aws-sdk": "^0.64.0",
    "@opentelemetry/instrumentation-graphql": "^0.56.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@pothos/core": "^4.10.0",
    "@pothos/plugin-complexity": "^4.1.2",
    "@pothos/plugin-relay": "^4.6.2",
    "@pothos/plugin-scope-auth": "^4.1.6",
    "@pothos/plugin-tracing": "^1.1.2",
    "@pothos/plugin-validation": "^4.2.0",
    "@social-media-app/auction-dal": "workspace:*",
    "@social-media-app/auth-utils": "workspace:*",
    "@social-media-app/aws-utils": "workspace:*",
    "@social-media-app/dal": "workspace:*",
    "@social-media-app/env": "workspace:*",
    "@social-media-app/shared": "workspace:*",
    "awilix": "^12.0.5",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "express": "^4.18.2",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "jose": "^5.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "rotating-file-stream": "^3.2.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@aws-sdk/client-kinesis": "^3.911.0",
    "@opentelemetry/sdk-trace-node": "^1.31.0",
    "@types/aws-lambda": "^8.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
