{
  "name": "@social-media-app/auction-dal",
  "version": "1.0.0",
  "type": "module",
  "description": "Data Access Layer for auction system using PostgreSQL",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx scripts/run-migration.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx scripts/drizzle-migrate.ts"
  },
  "dependencies": {
    "@social-media-app/shared": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "pg": "^8.11.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.10.9",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
