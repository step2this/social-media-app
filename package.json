{
  "name": "social-media-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Full-stack social media application with ESM, TypeScript, and AWS",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @social-media-app/shared build",
    "build:all": "pnpm build:shared && pnpm -r build",
    "dev:frontend": "pnpm build:shared && pnpm --filter @social-media-app/frontend dev",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm -r test:integration",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean",
    "prepare": "husky install",
    "deploy:backend": "./deploy-backend.sh",
    "deploy:backend:prod": "CDK_ENV=prod ./deploy-backend.sh",
    "test:deployment": "./test-deployment.sh",
    "rollback:backend": "./rollback-backend.sh",
    "status": "./scripts/deployment-status.sh",
    "status:dev": "./scripts/deployment-status.sh dev",
    "status:staging": "./scripts/deployment-status.sh staging",
    "status:production": "./scripts/deployment-status.sh production",
    "local:start": "docker-compose -f docker-compose.local.yml up -d",
    "local:stop": "docker-compose -f docker-compose.local.yml down",
    "local:status": "docker-compose -f docker-compose.local.yml ps && curl -s http://localhost:4566/_localstack/health | jq .",
    "local:logs": "docker-compose -f docker-compose.local.yml logs -f",
    "local:restart": "pnpm local:stop && pnpm local:start",
    "dev:localstack": "cp .env.local .env && pnpm local:start && pnpm dev",
    "dev:mocks": "cp .env.mocks .env && pnpm local:stop && cd packages/frontend && pnpm dev",
    "switch:localstack": "cp .env.local .env && echo 'ðŸ”§ Switched to LocalStack mode - run: pnpm local:start && pnpm dev'",
    "switch:mocks": "cp .env.mocks .env && echo 'ðŸŽ­ Switched to MSW mock mode - run: pnpm local:stop && cd packages/frontend && pnpm dev'"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-functional": "^6.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}